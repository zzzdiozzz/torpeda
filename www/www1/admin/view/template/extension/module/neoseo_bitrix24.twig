                                <tr>
                                    <td class="text-left">{{ column_order_status }}</td>
                                    <td class="text-left">{{ column_deal_stage }}</td>
                                    <td></td>
                                </tr>
                                </thead>
                                <tbody>
                                {% set order_status_to_deal_row = 0 %}
